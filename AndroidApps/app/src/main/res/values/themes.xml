<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidApps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_light</item>
        <item name="colorSecondaryVariant">@color/gray_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Basic dialog styling -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>

        <!-- Button styling -->
        <item name="buttonBarPositiveButtonStyle">@style/GreenButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/RedButtonStyle</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="GreenButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_green_button</item>
    </style>

    <style name="RedButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_red_button</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="textAppearanceButton">@style/DialogButtonTextAppearance</item>
    </style>

    <style name="DialogButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/green_primary</item> <!-- Warna tombol positif -->
    </style>



</resources>